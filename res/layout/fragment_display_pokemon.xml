<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="horizontal" >
	    
	<LinearLayout 
	    android:layout_width="0dip"
	    android:layout_height="match_parent"
	    android:orientation="vertical" 
	    android:layout_weight="1">
	    
	    <!--  START : Search Area -->
		<Button
	        android:id="@+id/btnSearch"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"	
	        android:onClick="onSearchClick"
	        android:text="Press to Search" />
	
		<EditText
		    android:id="@+id/txtSearch"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:ems="10"
		    android:text="1" >
	
		    <!-- <requestFocus android:layout_width="wrap_content" />  -->
	
		</EditText>
		<!-- END : Search Area -->
		
		<!-- START : Display Area -->
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal">
		    
			        <TextView
				        android:id="@+id/txtID"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text=" "
				        android:textAppearance="?android:attr/textAppearanceSmall" 
				        android:textSize="15pt"/>
		    
				    <TextView
				        android:id="@+id/txtName"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="Pokemon Name "
				        android:textAppearance="?android:attr/textAppearanceSmall" 
				        android:textSize="15pt"/>
	
		</LinearLayout>
		
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal">
		    
		    
		    <LinearLayout 
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:orientation="vertical">
				    
			    <ImageView
			        android:id="@+id/imageView1"
			        android:layout_width="200dip"
			        android:layout_height="200dip"
			        android:src="@drawable/pokeball"
			        android:padding="10dip" />
			    
			    <LinearLayout 
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
				    android:layout_gravity="center">
				    
			        <TextView
				        android:id="@+id/lblSpecies"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="Species : "
				        android:textAppearance="?android:attr/textAppearanceSmall" />
		    
				    <TextView
				        android:id="@+id/txtSpecies"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text=""
				        android:textAppearance="?android:attr/textAppearanceSmall" />
			    </LinearLayout> 
			    
			    <LinearLayout 
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
				    android:layout_gravity="center" >
				    
			        <TextView
				        android:id="@+id/lblHeight"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="Height : "
				        android:textAppearance="?android:attr/textAppearanceSmall" />
		    
				    <TextView
				        android:id="@+id/txtHeight"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text=""
				        android:textAppearance="?android:attr/textAppearanceSmall" />
			    </LinearLayout>
			    
			    <LinearLayout 
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
				    android:layout_gravity="center" >
				    
			        <TextView
				        android:id="@+id/lblWeight"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="Weight : "
				        android:textAppearance="?android:attr/textAppearanceSmall" />
		    
				    <TextView
				        android:id="@+id/txtWeight"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text=""
				        android:textAppearance="?android:attr/textAppearanceSmall" />
				    
				    <TextView
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text=" lbs"
				        android:textAppearance="?android:attr/textAppearanceSmall" />
			    </LinearLayout>		
		    
			</LinearLayout> 
		    
	
			
		    <!-- START : Stats Area -->
		    <LinearLayout 
			    android:layout_width="120dip"
			    android:layout_height="wrap_content"

			    android:paddingTop="20dip"
			    android:orientation="vertical">
	
			    <LinearLayout 
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal">
	
			        <TextView
				        android:id="@+id/lblHP"
				        android:layout_width="30dip"
				        android:layout_height="30dip"
				        android:background="#AAFF7F"
				        android:gravity="center"
				        android:text="HP"
				        android:textAppearance="?android:attr/textAppearanceSmall"
				        android:textSize="6pt" />
		    
				    <TextView
				        android:id="@+id/txtHP"
				        android:layout_width="wrap_content"
				        android:layout_height="match_parent"
				        android:layout_marginTop="3dip"
				        android:layout_marginLeft="5dip"
				        android:gravity="center"
				        android:text="100"
				        android:textAppearance="?android:attr/textAppearanceSmall"
				        android:textSize="6pt"  />
			    </LinearLayout>

			    <LinearLayout 
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal">
				    
			        <TextView
				        android:id="@+id/lblATK"
				        android:layout_width="30dip"
				        android:layout_height="30dip"
				        android:background="#FFFF7F"
				        android:gravity="center"
				        android:layout_marginTop="3dip"
				        android:text="ATK"
				        android:textAppearance="?android:attr/textAppearanceSmall" 
				        android:textSize="6pt" />
		    
				    <TextView
				        android:id="@+id/txtATK"
				        android:layout_width="wrap_content"
				        android:layout_height="match_parent"
				        android:layout_marginTop="3dip"
				        android:layout_marginLeft="5dip"
				        android:gravity="center"
				        android:text="200"
				        android:textAppearance="?android:attr/textAppearanceSmall"
				        android:textSize="6pt"  />
			    </LinearLayout>
			    
			    <LinearLayout 
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal">
				    
			        <TextView
				        android:id="@+id/lblDEF"
				        android:layout_width="30dip"
				        android:layout_height="30dip"
				        android:background="#FFD455"
				        android:gravity="center"
				        android:layout_marginTop="3dip"
				        android:text="DEF"
				        android:textAppearance="?android:attr/textAppearanceSmall" 
				        android:textSize="6pt" />
		    
				    <TextView
				        android:id="@+id/txtDEF"
				        android:layout_width="wrap_content"
				        android:layout_height="match_parent"
				        android:layout_marginTop="3dip"
				        android:layout_marginLeft="5dip"
				        android:gravity="center"
				        android:text="300"
				        android:textAppearance="?android:attr/textAppearanceSmall"
				        android:textSize="6pt"  />
			    </LinearLayout>		    	        
	
			    <LinearLayout 
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal">
				    
			        <TextView
				        android:id="@+id/lblSPATK"
				        android:layout_width="30dip"
				        android:layout_height="30dip"
				        android:background="#2AD4FF"
				        android:gravity="center"
				        android:layout_marginTop="3dip"
				        android:text="SP\nATK"
				        android:textAppearance="?android:attr/textAppearanceSmall"
				        android:textSize="5pt" />
		    
				    <TextView
				        android:id="@+id/txtSPATK"
				        android:layout_width="wrap_content"
				        android:layout_height="match_parent"
				        android:layout_marginTop="3dip"
				        android:layout_marginLeft="5dip"
				        android:gravity="center"
				        android:text="400"
				        android:textAppearance="?android:attr/textAppearanceSmall"
				        android:textSize="6pt"  />
			    </LinearLayout>
			     
			    <LinearLayout 
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal">
				    
			        <TextView
				        android:id="@+id/lblSPDEF"
				        android:layout_width="30dip"
				        android:layout_height="30dip"
				        android:background="#7F7FFF"
				        android:gravity="center"
				        android:layout_marginTop="3dip"
				        android:text="SP\nDEF"
				        android:textAppearance="?android:attr/textAppearanceSmall"
				        android:textSize="5pt" />
		    
				    <TextView
				        android:id="@+id/txtSPDEF"
				        android:layout_width="wrap_content"
				        android:layout_height="match_parent"
				        android:layout_marginTop="3dip"
				        android:layout_marginLeft="5dip"
				        android:gravity="center"
				        android:text="500"
				        android:textAppearance="?android:attr/textAppearanceSmall"
				        android:textSize="6pt"  />
			    </LinearLayout>				    	
			    
			    <LinearLayout 
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal">
				    
			        <TextView
				        android:id="@+id/lblSPD"
				        android:layout_width="30dip"
				        android:layout_height="30dip"
				        android:background="#FF55D4"
				        android:gravity="center"
				        android:layout_marginTop="3dip"
				        android:text="SPD"
				        android:textAppearance="?android:attr/textAppearanceSmall"
				        android:textSize="6pt" />
		    
				    <TextView
				        android:id="@+id/txtSPD"
				        android:layout_width="wrap_content"
				        android:layout_height="match_parent"
				        android:layout_marginTop="3dip"
				        android:layout_marginLeft="5dip"
				        android:gravity="center"
				        android:text="600"
				        android:textAppearance="?android:attr/textAppearanceSmall"
				        android:textSize="6pt"  />
			    </LinearLayout>
			</LinearLayout>
			<!-- END : Stats Area -->
			
		    
			<!--  START : Capture and Breeding -->
		    <LinearLayout 
			    android:layout_width="0dip"
			    android:layout_height="wrap_content"
			    android:layout_weight="2"
			    android:paddingTop="20dip"
			    android:orientation="vertical">
			    
  		        <LinearLayout 
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal">
				    
			        <TextView
				        android:id="@+id/lblMaleFemaleRatio"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="Male/Female Ratio : "
				        android:textAppearance="?android:attr/textAppearanceSmall" />
		    
				    <TextView
				        android:id="@+id/txtMaleFemaleRatio"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="0.56"
				        android:textAppearance="?android:attr/textAppearanceSmall" />
			    </LinearLayout>
			    
			     
			    <LinearLayout 
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal">
				    
			        <TextView
				        android:id="@+id/lblCatch"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="Catch Rate : "
				        android:textAppearance="?android:attr/textAppearanceSmall" />
		    
				    <TextView
				        android:id="@+id/txtCatchRate"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text=""
				        android:textAppearance="?android:attr/textAppearanceSmall" />
			    </LinearLayout>
	
				<LinearLayout 
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal">
				    
			        <TextView
				        android:id="@+id/lblEggCycles"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="Egg Cycles : "
				        android:textAppearance="?android:attr/textAppearanceSmall" />
		    
				    <TextView
				        android:id="@+id/txtEggCycles"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text=""
				        android:textAppearance="?android:attr/textAppearanceSmall" />
			    </LinearLayout>
				
				<LinearLayout 
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal">
				    
			        <TextView
				        android:id="@+id/lblEggGroups"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="Egg groups : "
				        android:textAppearance="?android:attr/textAppearanceSmall" />
	
		    
				    <TextView
				        android:id="@+id/txtEggGroups"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text=""
				        android:textAppearance="?android:attr/textAppearanceSmall" />
			    </LinearLayout>
	
				<LinearLayout 
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal">
				    
			        <TextView
				        android:id="@+id/lblGrowthRate"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="Growth Rate : "
				        android:textAppearance="?android:attr/textAppearanceSmall" />
		    
				    <TextView
				        android:id="@+id/txtGrowthRate"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text=""
				        android:textAppearance="?android:attr/textAppearanceSmall" />
			    </LinearLayout>
			     
			    <LinearLayout 
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal">
				    
			        <TextView
				        android:id="@+id/lblEVYield"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="EV Yield : "
				        android:textAppearance="?android:attr/textAppearanceSmall" />
		    
				    <TextView
				        android:id="@+id/txtEVYield"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text=""
				        android:textAppearance="?android:attr/textAppearanceSmall" />
			    </LinearLayout>				    		    		    		    	        
	
			    <LinearLayout 
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal">
				    
			        <TextView
				        android:id="@+id/lblHappiness"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="Happiness : "
				        android:textAppearance="?android:attr/textAppearanceSmall" />
		    
				    <TextView
				        android:id="@+id/txtHappiness"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text=""
				        android:textAppearance="?android:attr/textAppearanceSmall" />
			    </LinearLayout>
	
		
			    
			 </LinearLayout>   
	
		</LinearLayout>
		<!-- END : Display Area -->	
	
		<LinearLayout 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:paddingLeft="100dip">
		    		
		    
		    

		</LinearLayout>
	
		<!-- 
		<View 
		    android:layout_width="fill_parent"
		    android:layout_height="2dip"
		    android:background="#FFFF0000"/>
		 -->
		 
		<!-- START : Evolutions -->
	    <TableLayout 
	        android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
		    
	        <TableRow 
	            android:gravity="center">
	
	            <ImageView
	                android:id="@+id/imageView2"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:src="@drawable/ic_launcher" />
	            
	        </TableRow>
	        
	    </TableLayout>
	</LinearLayout>
	
	
	
	<!-- MOVES -->
	<LinearLayout 
	    android:id="@+id/moves_holder"
	    android:layout_width="0dip"
	    android:layout_height="match_parent"
	    android:orientation="vertical" 
	    android:layout_weight="1">
	    
	    <include android:id="@+id/movesArea" layout="@layout/fragment_move_list" />
	    
	</LinearLayout>
	
</LinearLayout>