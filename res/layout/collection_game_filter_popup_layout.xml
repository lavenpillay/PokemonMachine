<?xml version="1.0" encoding="utf-8"?>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/gameFilterDialog"
	   	android:layout_width="500dip"
		android:layout_height="150dip"
		android:background="@drawable/popup_bg"
		android:orientation="vertical" >
	 
		<TextView
		   android:id="@+id/txtPopupHeading"
		   android:layout_width="fill_parent"
		   android:layout_height="wrap_content"
		   android:text="Popup"
		   android:textColor="#FFFFFF"
		   android:gravity="center_horizontal"
		   android:textAppearance="?android:attr/textAppearanceLarge" />
		 
		<TextView
		   android:id="@+id/txtPopupContent"
		   android:layout_marginTop="5dp"
		   android:layout_width="fill_parent"
		   android:layout_height="wrap_content"
		   android:textColor="#DDDDDD"
		   android:gravity="center_horizontal"
		   android:text="Select the games you want to see displayed" />
		
		<ScrollView 
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent">
		    
		    <com.darkdesign.pokemonmachine.layout.FlowLayout
	            android:id="@+id/gameFilterCheckboxHolder"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"/>
		    <!-- 
			<LinearLayout 
			    android:id="@+id/gameFilterCheckboxHolder"
			   	android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical" >
			</LinearLayout>
			-->
		</ScrollView>
	
	</LinearLayout>
