<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentItems"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/container_dropshadow"
    android:orientation="horizontal"
    android:paddingLeft="10dip" >

    <!-- List of Pokemon to choose from -->
    <LinearLayout
        android:id="@+id/itemList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:background="@drawable/shadow_left">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/txtFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="item name"
                android:inputType="text"
                android:text=""
                android:textColorHint="#AAAAAA" >
            </EditText>

            <ImageButton
                android:id="@+id/btnClearNameFilter"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_gravity="center"
                android:background="@null"
                android:onClick="onClearNameFilterClick"
                android:src="@drawable/clear_cross_01" />
        </LinearLayout>
        
        <ListView
            android:id="@+id/plist"
            android:layout_width="250dip"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"
            android:fadingEdge="vertical"
            android:fastScrollAlwaysVisible="true"
            android:fastScrollEnabled="true"
            android:scrollbarStyle="outsideInset"
            android:scrollbars="vertical"
            tools:listitem="@layout/list_item_item">

		</ListView>


    </LinearLayout>

    <!-- END - List of Items -->


	<!-- START - Main Display Area -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shadow_left"
        android:orientation="horizontal" 
        android:paddingLeft="10dip">

        <!-- START : Main Info Area -->
        <LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"	        
	        android:orientation="vertical"
	        android:background="@drawable/shadow_left" >
            
	        <TextView
	            android:id="@+id/txtName"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Item Name "
	            android:textAppearance="?android:attr/textAppearanceSmall"
	            android:textSize="15pt" />
	        
	        <TextView
	            android:id="@+id/txtDescription"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="Item Description"
	            android:textAppearance="?android:attr/textAppearanceSmall"
	            android:textSize="10pt" />
        </LinearLayout>
        <!-- END : Main Info Area -->
        
        
        <!-- START : Additional Info Area -->
        <ScrollView 
			android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:layout_weight="1" >
        
	        <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:orientation="vertical"
	            android:paddingLeft="15dp" >
		        
	            <TextView
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:gravity="center"
	                android:paddingBottom="10dp"
	                android:text="Additional Information"
	                android:textSize="28dp" />
	            
	            <TextView
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:text="Category"
		            android:textSize="10pt" />
	            
	            <TextView
	                android:id="@+id/txtCategory"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:text="Category"
		            android:textSize="10pt" />
	            
	        </LinearLayout>
        </ScrollView>
        <!-- END : Additional Info Area -->
        
    </LinearLayout>

</LinearLayout>