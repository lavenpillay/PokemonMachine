<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- The main content view -->

    <LinearLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <fragment
            android:id="@+id/listPokemon"
            android:name="com.darkdesign.pokemonmachine.fragment.PokemonListFragment"
            android:layout_width="250dip"
            android:layout_height="match_parent"
            android:tag="PokemonListFragment"
            tools:layout="@layout/fragment_pokemon_list" />

        <fragment
            android:id="@+id/displayPokemon"
            android:name="com.darkdesign.pokemonmachine.fragment.PokemonDisplayFragment"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:tag="PokemonDisplayFragment"
            tools:layout="@layout/fragment_display_pokemon" />
    </LinearLayout>

    <!-- The navigation drawer -->

    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#111"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" />

</android.support.v4.widget.DrawerLayout>