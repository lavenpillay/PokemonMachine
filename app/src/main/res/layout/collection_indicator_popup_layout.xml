<CheckBox
    android:id="@+id/chkSeenIndicator"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#AAAAAA"
    android:text="Seen" />

<CheckBox
    android:id="@+id/chkCaughtIndicator"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#AAAAAA"
    android:text="Caught" />

<CheckBox
    android:id="@+id/chkShinyIndicator"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#AAAAAA"
    android:text="Shiny" />

<CheckBox
    android:id="@+id/chkMegaStoneIndicator"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#AAAAAA"
    android:text="Have Mega Stone" />

<CheckBox
    android:id="@+id/chkTradedIndicator"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#AAAAAA"
    android:text="From Trade" />
 

</LinearLayout>